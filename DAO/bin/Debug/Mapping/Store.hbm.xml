<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="SeniorProject"
                   namespace="Domain.Entities">
  <class name="Store">
    <id name="storeId">
      <generator class="native"/>
    </id>

    <property name="name" />

    <one-to-one class="Inventory" name="inventory"/>

    <bag name="customers" table="LinkCustomerStore">
      <key column="storeId"/>
      <many-to-many class="Customer" column="customerId"/>
    </bag>

    <bag name="transactions">
      <key column="storeId"/>
      <one-to-many class="Transactions"/>
    </bag>
    
  </class>
  
</hibernate-mapping>