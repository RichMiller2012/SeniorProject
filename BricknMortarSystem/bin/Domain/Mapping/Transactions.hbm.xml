<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="BricknMortarSystem"
                   namespace="Domain.Entities">

  <class name="Transactions">
    <id name="transactionId">
      <generator class="native"/>
    </id>

    <property name="taxRate"/>
    <property name="totalAmount"/>
    <property name="date"/>
    <property name="transactionNumber"/>
  

    <many-to-one name="customer" column="customerId" />
    <many-to-one name="store" column="storeId"/>
    
    <bag name="saleItems" cascade="all">
      <key column="transactionId" />
      <one-to-many class="SaleItem" />
    </bag>
    
  </class>
</hibernate-mapping>