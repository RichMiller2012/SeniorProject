<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="BricknMortarSystem"
                   namespace="Domain.Entities">

  <class name="Customer">
    <id name="customerId">
      <generator class="native"/>
    </id>
    
    <property name="total"/>
    <property name="phoneNumber"/>
    <property name="firstName"/>
    <property name="lastName"/>
    <property name="middleName"/>
    

    <many-to-one name="discount" column="discountId" cascade="all"/>

    <bag name="account" cascade="all">
      <key column="customerId"/>
      <one-to-many class="Account"/>
    </bag>
 
    <bag name="transactions" cascade="all" lazy="false" >
      <key column="customerId"/>
      <one-to-many class="Transactions"/>
    </bag>

    
    <bag name="stores" table="LinkCustomerStore" cascade="all">
      <key>
        <column name="customerId"></column>
      </key>
      <many-to-many class="Store">
        <column name="storeId"></column>
      </many-to-many>
    </bag>

    <bag name="saleItems" table="LinkCustomerSaleItem" cascade="all">
      <key column="customerId"/>
      <many-to-many class="SaleItem" column="saleItemId"/>
    </bag>
    
  </class>

</hibernate-mapping>